@model Kafala.Web.ViewModels.PaymentPeriod.ListPaymentPeriodViewModel

    <p>
        @Html.ActionLink("Create New", "Create", null , new{  @class = "showInPopUpOnClick" })
    </p>
    <table class="table">
        <tr>
            <th>
               Year
            </th>
            <th>
                Month
            </th>
            <th>
                Name
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model.PaymentPeriods)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new{  @class = "showInPopUpOnClick" }) |
                @Html.ActionLink("Details", "Details", new {id = item.Id}, new{  @class = "showInBaloonOnMouseOver" }) |
                @Html.ActionLink("PopUP", "Details", new {id = item.Id}, new{  @class = "showInPopUpOnClick" }) |
                @Ajax.ActionLink("Delete" , "Delete", new { id=item.Id } , 
                new AjaxOptions()
                {
                    Confirm = "Are you sure you want to delete this payment period?",
                    HttpMethod = "Post",
                    LoadingElementId = "processing-modal",
                    LoadingElementDuration = 3000
                })
            </td>
        </tr>
    }
    
    </table>

