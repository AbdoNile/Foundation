@using Kafala.Web.ViewModels.Donor;
@model DonorIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Donors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        @Html.SortableHeader(Model.PagingInformationViewModel, "Name" , "Name")
        @Html.SortableHeader(Model.PagingInformationViewModel, "Telephone" , "Telephone")
        @Html.SortableHeader(Model.PagingInformationViewModel, "JoinDate" , "Join Date")
        @Html.SortableHeader(Model.PagingInformationViewModel, "DonorStatus" , "Status")
        <th></th>
    </tr>

@foreach (var item in Model.Donors) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoinDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonorStatus)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
    
 
    
</table>
 @Html.PageLinks(Model.PagingInformationViewModel)
